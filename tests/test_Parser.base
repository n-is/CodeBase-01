task fact(int n) : int
{
        ? n < 0 ^ -1 ;
        ? n < 2 ^ 1 ;
        ^ n * fact(n - 1);
}

task main() : int
{
        int a;
        a = 7;
        a = fact(a);
        ^ 0;
}
